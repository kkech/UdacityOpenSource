<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.ConnectActivity">


    <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="100px"/>
    <TextView
            android:text="@string/best_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="1dp"
            android:textSize="32dp"/>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:srcCompat="@drawable/open_mined" android:id="@+id/imageView"/>
    <ScrollView android:layout_width="match_parent" android:layout_height="450px">
        <TextView
                android:id="@+id/log_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="1dp"
        />
    </ScrollView>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/buttonBarStyle">
        <Button
                android:id="@+id/btn_initiate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="@string/connect"
                style="?android:attr/buttonGravity"
        />

    </LinearLayout>
</LinearLayout>




